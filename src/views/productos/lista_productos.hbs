<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-4">Lista de productos</h3>
        {{#if productos}}
        
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Precio Venta</th>
                        {{#if clienteAutenticado}}
                            <th scope="col">Precio Oferta</th>
                            <th scope="col">En Oferta</th>
                        {{/if}}
                        
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                        <tr>
                            
                            <td>{{ descripcion }}</td>
                            <td>{{ precio_venta }}</td>
                            {{#if ../clienteAutenticado}}
                                <td>{{ precio_oferta }}</td>
                                <td>{{ oferta }}</td>
                            {{/if}}
                            
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>No hay productos registrados</h3>
                </div>
                <div class="card-body">
                    <p>Presiona para registrar un producto</p>
                    <a href="/addP" class="btn btn-primary">Registrar</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>
