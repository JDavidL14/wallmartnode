<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Registrar empresa</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    
                    <div class="input-group mt-2">
                        <label for="nombre" class="input-group-text">Usuario</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre de la empresa" required>
                    </div>

                    <div class="input-group mt-2">
                        <label for="password" class="input-group-text">Contraseña</label>
                        <input class="form-control" type="text" name="password" id="password" placeholder="Dirección" required>
                    </div>

                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Crear</button>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>